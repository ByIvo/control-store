<div class="container">

	<div class="jumbotrom text-center">
		<h1> Bem vindo! </h1>
		<h3> Fa√ßa login para continuar </h3>
	</div>
	<div class="row">

		<%= form_tag "authenticate", method: :post, class: 'col-xs-12 col-md-6 col-md-offset-3 center-text' do %>

		<div class="form-group">
			<%= label_tag :login, "E-mail", :class => 'col-lg-2' %>	
			<%= text_field_tag :login,nil, :class => 'form-control', placeholder: 'Digite seu e-mail' %>
		</div>

		<div class="form-group">
			<%= label_tag :password, "Senha", :class => 'col-lg-2' %>
			<%= text_field_tag :password, nil, :class => 'form-control', placeholder: 'Digite sua senha' %>
		</div>

		<div class="form-group text-center">
			<div class="col-xs-12">
				<%= button_tag "Login", type: :submit,  :class => 'btn btn-primary col-xs-4 col-xs-offset-1' %>
				<%= button_tag "Limpar", type: :reset, :class => 'btn btn-primary col-xs-4 col-xs-offset-2' %>
			</div>
		</div>
		<% end -%>
	</div>
</div>