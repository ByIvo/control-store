<%- model_class = Product -%>
<div class="page-header">
	<div class="container">
		<h1 class="col-lg-12 text-center">Relatório de Produto</h1>
	</div>
</div>

<div class="container">

	<!-- FORMULÁRIO DE FILTRO -->
	<div class="col-xs-12">
		<%= form_tag("/report/filter_products", method: :post, class: "form-inline") do |f|%>
		<div class="form-group col-xs-12 col-md-6">
			<%= label_tag( :filter, 'Nome')%>
			<%=  text_field_tag( :filter, nil, style: "width: 100%",class: "form-control col-xs-12", placeholder: "Digite o nome do produto")%>
		</div>
		<div class="form-group col-xs-8 col-md-4">
			<%= label_tag( :min_price, 'Preço Entre')%>

			<div class="input-group">
				<%=  text_field_tag( :min_price, nil, class: "form-control col-xs-12", placeholder: "0")%>
				<div class="input-group-addon"> - </div>
				<%=  text_field_tag( :max_price, nil, class: "form-control col-xs-12", placeholder: "0")%>
			</div>
		</div>
		<div class="form-group col-xs-4 col-md-2">
			<%= label_tag( :min_price, 'Opções')%>
			<%= submit_tag("Filtrar", class: "btn btn-primary col-xs-12") %>
		</div>
		<% end -%>
	</div>
	<div class="container">
		<div class="col-xs-12">
			<table class="table table-striped table-hover table-condensed">
				<thead>
					<tr>
						<th class="text-center col-xs-2 col-md-1">Id</th>
						<th>Nome</th>
						<th class="col-xs-4 col-md-1">Preço</th>
						<th class="col-xs-2 col-md-2">Criado em</th>
					</tr>
				</thead>

				<tbody>
					<% @filtered_products.each do |product| %>
					<tr>
						<td class="text-center"><%= product.id %></td>
						<td><%= product.name %></td>
						<td>R$ <%= product.price %></td>
						<td><%= product.created_at.strftime '%d/%m/%Y %H:%M:%S' %></td>
					</tr>
					<% end %>

					<tr class="info">
					<td colspan="3" class="text-right">
						Total de itens: 
					</td>
					<td class="text-left">
						<%= @filtered_products.size %>
					</td>
					</tr>
				</tbody>

			</table>
		</div>
	</div>
</div>


