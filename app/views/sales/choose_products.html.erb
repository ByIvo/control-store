<div class="container">
	<div class="jumbotrom">
		Selecione os produtos
	</div>
</div>

<div class="container">
	<%= form_for @sale_product, :html => { :class => "form-horizontal sale" }  do |f| %>

	<div class="form-group">
		<%= f.label :product, :class => 'control-label col-lg-2' %>
		<div class="col-lg-10">
			<%= select_tag "Produto", options_from_collection_for_select(@available_products,:id, :name), :class => 'form-control' %>
		</div>
		<%=f.error_span(:customer) %>
	</div>

	<div class="form-group">
		<%= f.label :quantity, :class => 'control-label col-lg-2' %>
		<div class="col-lg-10">
			<%= f.number_field "Quantidade", nil, class: 'form-control'  %>
		</div>
		<%=f.error_span(:quantity) %>
	</div>

	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-10">
			<%= f.submit nil, :class => 'btn btn-primary' %>
			<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
			sales_path, :class => 'btn btn-default' %>
		</div>
	</div>

	<% end %>
</div>

