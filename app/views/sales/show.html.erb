<%- model_class = Sale -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="container">
  <div class="col-xs-12">
    Nome: <%= @sale.customer.name%>
  </div>

  <div class="col-xs-12">
    Vendedor: <%= @sale.seller.name%>
  </div>

  <div class="col-xs-12">
    Data: <%= @sale.saleDate%>
  </div>

  <div class="col-xs-12">
    <h1> Produtos </h1>
  </div>

  <% @sale.sale_products.each do |sale_product|%>
  <div class="col-xs-6">
    <%= @sale.sale_product.product.name%>
  </div>

  <div class="col-xs-6">
    Produto: <%= @sale.sale_product.store.quantity%>
  </div>

  <div class="col-xs-6">
    Produto: <%= @sale.sale_product.price%>
  </div>
  <% end %>
</div>
